<h4 class="text-center">Showing <%= pluralize(@trainings.count, "trainings") %></h4>
<table class="table text-center">
    <thead>
        <tr>
            <th>Date/Time Logged</th>
            <th>Member Name</th>
            <th>Company Name</th>
            <th><%= select_tag "filter", options_from_collection_for_select(@users, :name, :name), :onchange => "", prompt: "Trainer" %></th>
            <th>Type/Stage</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        <% if params[:query] %>
            <% @trainings.sort.reverse_each do |t| %>
                <tr>
                    <td><%= t[1][:info]["created_at"] %></td>
                    <td><%= t[1][:info]["member"] %></td>
                    <td><%= t[1][:info]["company"] %></td>
                    <td><%= t[1][:info]["trainer"] %></td> 
                    <td><%= t[1][:info]["stage"] %></td> 
                    <td><%= t[1][:info]["status"] %></td> 
                    
                </tr>
            <% end %>
        <% end %>
    </tbody>
</table>