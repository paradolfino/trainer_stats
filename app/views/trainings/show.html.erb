<div class="training">
    <label>Member</label>
    <p><%= trunk(@training.member) %></p>
    <label>Company</label>
    <p><%= trunk(@training.company) %></p>
    <label>Trainer</label>
    <p><%= trunk(@training.trainer) %></p>
    <label>Stage</label>
    <p><%= @training.stage %></p>
    <label>Status</label>
    <p><%= @training.status %></p>
    <label>Training Date</label>
    <p><%= @training.date ? @training.date : @training.created_at.in_time_zone("Central Time (US & Canada)").strftime("%m/%d/%Y") %></p>
    <label>Training Time</label>
    <p><%= @training.time ? @training.time : @training.created_at.in_time_zone("Central Time (US & Canada)").strftime("%I:%M %p") %></p>
    <label>Notes</label>
    <p id="notes"><%= @training.notes %></p>
    
</div>
<div class="options">
    <% if user_signed_in?  %>
        <%= link_to fa_icon("edit", text: "Edit Training"), edit_log_training_path(@training) %> 
    <% end %>
    <%= link_to "Back to the Trainings Log", log_path(@training.log) %>
</div>