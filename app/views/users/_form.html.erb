<%= form_for @user do |f| %>
  
  
  <div class="form-group">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Name", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "password", placeholder: "Password", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "password", placeholder: "Confirm Password", class: "form-control" %>
  </div>
  
  <% if is_admin? && @user.id != current_user.id %>
    <div class="form-group">
      <%= f.label "Select a Role for User:" %> <br />
      <%= f.select(:role, options_for_select(["Trainer", "Admin"])) %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "#{val} User", class: "btn btn-primary" %>
    <%= link_to "Back", :back %>
  </div>
  <br />
  <% if @user.id %>
    <p class="text-center"><%= link_to "Cancel Account", user_path(@user), method: :delete, data: { confirm: "Are you sure?" } %></p>
  <% end %>
<% end %>
